{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.tsx", "../src/components/close-icon.tsx", "assets/circle-close-icon.tsx"],
  "exclude": ["node_modules"]
}
